<configuration>

    <!-- ทำงานเฉพาะเมื่อเป็นโปรไฟล์ dev -->
    <springProfile name="dev">

        <!-- Console Appender with colored output -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>
                    %d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %logger{36} - %msg%n
                </pattern>
            </encoder>
        </appender>

        <!-- Root Logger -->
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>

    </springProfile>

    <!-- ทำงานเฉพาะเมื่อเป็นโปรไฟล์ local, test หรือ prod -->
    <springProfile name="local, test, prod">

        <!-- File Appender -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/app.log</file>

            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- เพิ่ม logs/ เพื่อให้ไฟล์ล็อกอยู่ในโฟลเดอร์ logs -->
                <fileNamePattern>logs/history/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>

                <!-- กำหนดขนาดไฟล์สูงสุดที่ 10MB -->
                <maxFileSize>10MB</maxFileSize>

                <!-- กำหนดการเก็บไฟล์ล็อกย้อนหลัง 30 วัน -->
                <maxHistory>30</maxHistory>

                <!-- กำหนดขนาดรวมของไฟล์ล็อกทั้งหมดไม่เกิน 1GB -->
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>

            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- Root Logger -->
        <root level="ERROR">
            <appender-ref ref="FILE"/>
        </root>

    </springProfile>

</configuration>
